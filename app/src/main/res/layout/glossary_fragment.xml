<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.glossary.GlossaryFragment" android:id="@+id/frameLayout2">

    <TextView
            android:id="@+id/textViewGlossaryFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textIsSelectable="true"
            android:padding="16dp"
            android:textSize="24sp"
            android:scrollX="0dp"
            tools:chineseText="Glossary fragment!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonGlossaryFragmentToAddVocabulary"/>

    <Button
            android:id="@+id/buttonGlossaryFragmentToAddVocabulary"
            android:text="@string/button_add_vocabulary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@id/buttonGlossaryFragmentFlipToTextLeft"
            app:layout_constraintEnd_toStartOf="@id/buttonGlossaryFragmentFlipToTextRight"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/buttonGlossaryFragmentFlipToTextLeft"
            android:text="@string/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonGlossaryFragmentToAddVocabulary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
    />

    <Button
            android:id="@+id/buttonGlossaryFragmentFlipToTextRight"
            android:text="@string/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@id/buttonGlossaryFragmentToAddVocabulary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
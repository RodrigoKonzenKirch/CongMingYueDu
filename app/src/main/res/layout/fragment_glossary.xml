<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.glossary.GlossaryFragment"
        android:id="@+id/frameLayout2">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGlossaryFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            android:elevation="4dp"
            android:paddingHorizontal="@dimen/spacing_normal"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonGlossaryFragmentToAddVocabulary"
            />

    <Button
            android:id="@+id/buttonGlossaryFragmentToAddVocabulary"
            android:text="@string/button_add_vocabulary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@id/buttonGlossaryFragmentFlipToTextLeft"
            app:layout_constraintEnd_toStartOf="@id/buttonGlossaryFragmentFlipToTextRight"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginHorizontal="@dimen/spacing_small"/>

    <Button
            android:id="@+id/buttonGlossaryFragmentFlipToTextLeft"
            android:text="@string/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonGlossaryFragmentToAddVocabulary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="@dimen/spacing_small"
    />

    <Button
            android:id="@+id/buttonGlossaryFragmentFlipToTextRight"
            android:text="@string/button_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@id/buttonGlossaryFragmentToAddVocabulary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="@dimen/spacing_small"
    />

</androidx.constraintlayout.widget.ConstraintLayout>